<Window x:Class="WpfApp_DataBinding_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_DataBinding_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <StackPanel Margin="15">
        <Button Name="button1" Click="Button1Click" Content="Add"></Button>
        <Button Name="button2" Click="Button2Click" Content="Change"></Button>
        <Button Name="button3" Click="Button3Click" Content="Delete"></Button>
        <ListBox Name="listBox1" DisplayMemberPath="Name"></ListBox>
    </StackPanel>
</Window>
