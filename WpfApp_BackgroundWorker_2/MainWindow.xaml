<Window x:Class="WpfApp_BackgroundWorker_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_BackgroundWorker_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="100,10,100,10">
            <TextBlock Text="Input Arguments: "></TextBlock>
            <TextBox Name="textBox1"></TextBox>
            <Button Name="runButton" Content="Run" Click="RunButtonClick"></Button>
            <TextBlock Text="Output: "></TextBlock>
            <TextBox Name="textBox2"></TextBox>
            <TextBox Name="textBox3"></TextBox>
        </StackPanel>
    </Grid>
</Window>
