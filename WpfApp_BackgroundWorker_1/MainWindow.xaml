<Window x:Class="WpfApp_BackgroundWorker_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_BackgroundWorker_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="150, 0, 150, 0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Input Argument: "></TextBlock>
                <TextBox Name="textBox1" Width="100"></TextBox>
            </StackPanel>
            <Button Content="Run" Name="runButton" Click="RunButtonClick"></Button>
            <ProgressBar Name="progressBar1" Minimum="0" Maximum="100" Height="20"></ProgressBar>
            <TextBlock Text="Outputs: "></TextBlock>
            <TextBox Name="textBox2"></TextBox>
        </StackPanel>
    </Grid>
</Window>
